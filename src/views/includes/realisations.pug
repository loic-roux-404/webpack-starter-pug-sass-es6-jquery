//-============Imports
- const realisations = htmlWebpackPlugin.options.content.realisations;
- var rea1 = realisations.rea1 ;
- var rea2 = realisations.rea2 ;
- const none =""; 
article#realisations.hero3
  span.round-background.d-block
  .buttons-rea
    button.rounded-circle.site(data-state='1', title='Digital products')
      i.fa-globe
    button.rounded-circle.game(data-state='0', title='More projects : PAO, web games & applications')
      i.fa-plus-circle
  h1.text-center.py-3.py-lg-5.n-1(title='Projects list and direct links to see them')
    .text-center.text-uppercase.heebo.f900.px-2.text-dark.d-inline.text2
      | Portfolio
  #bloc-vid.py-2.py-md-5.mt-sm-5.mt-md-2.mt-lg-3
    #videos1.py-sm-0.py-md-5
      .back-desc
        //- lightbox background
        .text-center
          button.close-wrapper.bg-transparent.align-center.text-center.pt-md-3.pt-2(title='Close this work')
            span.close.hairline
        - for (var j = 0;j < 6;j++){
        - var item = rea1[j];
        div(class="desc desc-"+j+" px-2")
          .container.container-fluid.w-xl-60
            h4.pt-2.m-0(title=item.seo.subtitle)= item.subtitle
            p.d-inline(title=item.seo.date)= item.date
            p.pt-2.m-0= item.intro
            span.d-block(style='height:4px;')
            if item.content
              p.main-content.py-2.text-md-left !{item.content}
            else if item.list
              ul.main-content.text-md-left
                each val in item.list
                  li= val
              
            if item.disabled
              a(href=none, title=item.seo.link onclick="return false;" rel="noreferrer") Unaivalable  
            else     
              a(href=item.link, title=item.seo.link target="_blank" rel="noreferrer") See the project
        - }//-END FOR
        - for (var i = 6;i < 12;i++){
        - var item = rea2[i];
        div(class="desc desc-"+i+" px-2")
          .container.container-fluid.w-xl-60
            h4.pt-2.m-0(title=item.seo.subtitle)= item.subtitle
            p.d-inline(title=item.seo.date)= item.date
            p.pt-2.m-0= item.intro

            span.d-block(style='height:8px;')

            if item.content
              p.main-content.py-2.text-md-left !{item.content}
            else if item.list
              ul.main-content.py-1.py-sm-2.text-md-left
                each val in item.list
                  li= val
            else
              | No Project description
            if item.disabled
              a(href=none, title=item.seo.link onclick="return false;" rel="noreferrer") Unaivalable  
            else     
              a(href=item.link, title=item.seo.link target="_blank" rel="noreferrer") See the project
        - }//-END FOR

      .site-wrap.row.container-vid-1
        - for (var l = 0;l < 6;l++){
          div.video-bloc-1.col-6.btn-6
            - var item = rea1[l];
              .figure-rea
                div.img(title=item.title)
              .d-table.w-100.h-100
                p.text-white-50.heebo.d-table-cell.align-middle.text-center.text-uppercase(title=item.subtitle)= item.subtitle 
              span
        - }

      .game-wrap.row.container-vid-2
        - for (var k =6;k < 12;k++){
          div.video-bloc-1.col-6.btn-6.fig-game
            - var item = rea2[k];
              .figure-rea
                div.img(title=item.title)
              .d-table.w-100.h-100.h-100
                p.text-white-50.heebo.d-table-cell.align-middle.text-center.text-uppercase(title=item.subtitle)= item.subtitle
              span
        - }